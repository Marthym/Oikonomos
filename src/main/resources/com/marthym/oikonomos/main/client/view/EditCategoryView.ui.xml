<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
	xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:nomos="urn:import:com.marthym.oikonomos.main.client.components">
	
	<ui:with type="com.marthym.oikonomos.main.client.resources.MainFormViewResource" field="res" />
	<ui:with type="com.marthym.oikonomos.main.client.resources.DashboardViewResource" field="dashRes" />
	<ui:with type="com.marthym.oikonomos.client.i18n.OikonomosConstants" field="constants" />
	
	<g:HTMLPanel addStyleNames="{dashRes.style.view}">
		<g:HTMLPanel tag="h2" addStyleNames="{res.style.gradienRight}"><ui:text from="{constants.view_editcategory_title}"/></g:HTMLPanel>
		<g:HTMLPanel addStyleNames="{dashRes.style.mainView} {dashRes.style.categoriesMainView}"/><!-- Top left icon -->
		<g:FormPanel encoding="utf-8" method="post" ui:field="formUser" addStyleNames="{dashRes.style.clear}">
			<g:HTMLPanel> <!-- FormPanel does not accept more than one child ... -->
				<table style="width:99%;" class="{res.style.fieldTable}">
					<tr>
						<td class="{res.style.headerCell}"><g:Label text="{constants.view_id}" /></td>
						<td style="width:50px;"><g:Label addStyleNames="{res.style.textBox}" ui:field="categoryId"/></td>
						<td class="{res.style.headerCell}"><g:Label text="{constants.view_editcategory_type}" /></td>
						<td><g:Label addStyleNames="{res.style.categoryType}" ui:field="categoryType"/></td>
					</tr><tr>
						<td class="{res.style.headerCell}"><g:Label text="{constants.view_editcategory_parent}" /></td>
						<td colspan="3"><nomos:SingleValueListBox addStyleNames="{res.style.listBox}" ui:field="categoryParent"/></td>
					</tr><tr>
						<td class="{res.style.headerCell}"><g:Label text="{constants.view_editcategory_label}" /></td>
						<td colspan="3"><g:TextBox addStyleNames="{res.style.textBox}" ui:field="categoryDescription"/></td>
					</tr>
				</table>
				
				<g:HTMLPanel styleName="{res.style.actions}">
					<g:Button text="{constants.resetButtonLabel}" ui:field="resetButton"/>
					<g:Button text="{constants.submitButtonLabel}" ui:field="submitButton"/>
				</g:HTMLPanel>
				<g:HTMLPanel>
					<g:Button visible="false" addStyleNames="{res.style.deleteButton}" text="{constants.deleteButtonLabel}" ui:field="deleteButton"/>
				</g:HTMLPanel>
			</g:HTMLPanel>
		</g:FormPanel>
	</g:HTMLPanel>
</ui:UiBinder> 