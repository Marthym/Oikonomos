<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
    
	<ui:with type="com.marthym.oikonomos.client.resources.MessageFlyerRessource" field="res" />
	<ui:with type="com.marthym.oikonomos.client.i18n.OikonomosConstants" field="constants" />
	
	<g:HTMLPanel width="400px" styleName="{res.style.messageFlyer}">
		<span><g:InlineHyperlink text="{constants.close}" targetHistoryToken="messageClose" ui:field="linkClose" /></span>
		<g:HTML wordWrap="true"><h3 ui:field="title" /></g:HTML>
		<g:HTML styleName="{res.style.messageFlyerBody}">
			<ul ui:field="messages" />
		</g:HTML>
	</g:HTMLPanel>
</ui:UiBinder> 